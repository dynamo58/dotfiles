{
    "editor.formatOnSave": true,
    "editor.selectionClipboard": false, // disable pasting with middle mouse button
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": true,
    "editor.fontFamily": "'Cascadia Mono', 'agave Nerd Font Mono', 'FantasqueSansMono Nerd Font', 'DinaRemasterII', 'Hasklug Nerd Font', 'Iosevka', 'Iosevka'",
    "editor.fontWeight": "400",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "editor.suggestSelection": "first",
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.ignoreRecommendations": true,
    "workbench.startupEditor": "none",
    "security.workspace.trust.startupPrompt": "never",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "default",
        "*.docx": "default",
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "explorer.confirmDragAndDrop": false,
    "git.confirmSync": false,
    "security.workspace.trust.banner": "never",
    "terminal.integrated.fontSize": 24,
    "git.enableSmartCommit": true,
    "rust-analyzer.callInfo.full": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.fontLigatures": true,
    "security.workspace.trust.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.rulers": [
        80,
        120
    ],
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "deno.codeLens.test": false,
    "deno.enable": true,
    "rust-analyzer.cargo.allFeatures": true,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "editor.formatOnPaste": true,
    "editor.bracketPairColorization.enabled": false,
    "git.autofetch": true,
    "editor.renderWhitespace": "none",
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingDelete": "always",
    "window.autoDetectHighContrast": false,
    "terminal.explorerKind": "external",
    "terminal.external.linuxExec": "alacritty",
    "background.enabled": true,
    "background.loop": false,
    "background.useDefault": false,
    "background.useFront": false,
    "background.style": {
        "content": "''",
        "pointer-events": "none",
        "position": "absolute",
        "z-index": "99999",
        "width": "100%",
        "height": "100%",
        "background-size": "cover",
        "background-repeat": "no-repeat",
        "opacity": 0.07
    },
    "background.customImages": [
        "/hdd/media/pictures/wallpapers/wave.jpg",
        "/hdd/media/pictures/wallpapers/0035.jpg"
    ],
    "search.showLineNumbers": true,
    "debug.showInlineBreakpointCandidates": false,
    "audioCues.lineHasBreakpoint": "off",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "workbench.iconTheme": "vscode-icons",
    "discord.enabled": true,
    // "customizeUI.activityBar": "wide",
    "window.menuBarVisibility": "toggle",
    // "workbench.activityBar.visible": false,
    // "workbench.statusBar.visible": false,
    "workbench.colorCustomizations": {
        // "editor.background": "#080808"
    },
    "workbench.colorTheme": "Default Dark+"
}